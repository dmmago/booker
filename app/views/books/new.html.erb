<h1>Books</h1>
<% @books.each do |book| %>
<p>Title</p>
<span><%= book.title %></span>
<p>Body</p>
<span><%= book.body %></span>
<% end %>



<h1>New books</h1>
<%= form_with model: Book.new do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
